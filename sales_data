# sales_data.py
sales_data = [230, 200, 310, 290, 400, 150, 180]
print(f"Sales data for the week: {sales_data}")

def total_sales (data):
    total_sale = 0
    for sale in data: 
        total_sale+= sale 
    return total_sale 

def average_sales (data):
    average_sale = sum(data)/len(data)
    return average_sale

print("Total Sales:", total_sales(sales_data))
print("Average Sales:", average_sales(sales_data))